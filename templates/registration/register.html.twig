{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block auth %}
    {% if not app.user %}
    <li class="nav-item">
        <a class="btn btn-outline-secondary mt-3 ml-3" href="{{ path('app_login') }}">Войти</a>
    </li>
    {% endif %}
{% endblock %}

{% block body %}
    {% if not app.user %}
        <div class="row mt-3">
            <div class="col-sm-5">
                <div class="ml-3 border rounded p-3">
                    <h1 class="text-success ml-3">Регистрация</h1>
                    {{ form_start(registrationForm, {'attr' : {'novalidate' : 'novalidate'}}) }}
                        {{ form_row(registrationForm.email) }}
                        {{ form_row(registrationForm.plainPassword) }}
                        <button class="btn btn-success btn-lg">Зарегистрироваться</button>
                    {{ form_end(registrationForm) }}
                </div>
            </div>
        </div>
    {% else %}
        <p class="mt-3">Вы уже зарегистированы, как {{ app.user.username }}.</p>
        <a href="{{ path('task_index') }}">Вернуться на главную страницу</a>
    {% endif %}
{% endblock %}
